@model Volunteer_website.Models.Organization
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Chỉnh sửa hồ sơ tổ chức";
    Layout = "~/Areas/Organization/Views/OrgLayout.cshtml";
}

<div class="container-fluid my-5">
    <div class="header-section border rounded p-4 mb-4" style="background-color: #ffffff;">
        <h1 class="text-center my-4 heading-title">Chỉnh sửa hồ sơ tổ chức</h1>
    </div>
    <div class="card shadow-sm border-0 rounded-3">

        <div class="card-body p-4">
            <form asp-action="EditProfile" method="post" enctype="multipart/form-data">
                <div class="row">
                    <input type="hidden" asp-for="OrgId" />
                    <div class="col-md-4 text-center mb-4">
                        <img src="~/@(Model.ImagePath ?? "https://via.placeholder.com/150")" alt="Ảnh hồ sơ"
                             class="img-fluid rounded-0 border border-primary mb-3" style="width: 150px; height: 150px; object-fit: cover;">
                        <div class="mb-3">
                            <label for="profileImage" class="form-label">Thay đổi ảnh hồ sơ</label>
                            <input type="file" name="profileImage" id="profileImage" class="form-control" accept="image/*" />
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold">Tên tổ chức</label>
                            <input asp-for="Name" class="form-control" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-bold">Email</label>
                            <input asp-for="Email" class="form-control" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label fw-bold">Số điện thoại</label>
                            <input asp-for="PhoneNumber" class="form-control" required />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Address" class="form-label fw-bold">Địa chỉ</label>
                            <input asp-for="Address" class="form-control" required />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold">Mô tả</label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="d-flex gap-3">
                            <button type="submit" class="btn btn-success px-4">
                                <i class="bi bi-save me-2"></i> Lưu thay đổi
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-arrow-left me-2"></i> Quay lại
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
}