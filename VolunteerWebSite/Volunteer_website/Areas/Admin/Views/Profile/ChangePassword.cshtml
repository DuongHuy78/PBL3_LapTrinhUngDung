@model Volunteer_website.Models.User
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Areas/Admin/Views/AdminLayout.cshtml";
}

<!-- Phần tiêu đề -->
<div class="header-section border rounded p-4 mb-4" style="background-color: #ffffff;">
    <h1 class="text-center my-4 heading-title">
        <i class="mdi mdi-key-variant me-2"></i>Change Password
    </h1>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="mdi mdi-check-circle me-2"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="mdi mdi-alert-circle me-2"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-4">
                <!-- Header với gradient -->
                <div class="card-header bg-gradient-warning text-white text-center p-4 rounded-top-4">
                    <div class="d-inline-block">
                        <i class="mdi mdi-key-variant" style="font-size: 48px;"></i>
                    </div>
                    <h3 class="fw-bold mt-3 mb-1">Security Settings</h3>
                    <p class="mb-0 opacity-75">
                        <i class="mdi mdi-shield-lock me-1"></i>Update your login credentials
                    </p>
                </div>

                <!-- Form đổi mật khẩu -->
                <div class="card-body p-4">
                    <form asp-action="ChangePassword" method="post" id="changePasswordForm">
                        <div class="row g-4">
                            <!-- Current Password -->
                            <div class="col-12">
                                <div class="form-floating">
                                    <input type="password"
                                           class="form-control"
                                           id="currentPassword"
                                           name="currentPassword"
                                           placeholder="Current Password"
                                           required>
                                    <label for="currentPassword">
                                        <i class="mdi mdi-lock me-2"></i>Current Password
                                    </label>
                                </div>
                            </div>

                            <!-- New UserName -->
                            <div class="col-12">
                                <div class="form-floating">
                                    <input class="form-control"
                                           id="newUsername"
                                           name="newUsername"
                                           placeholder="new Username"
                                           required>
                                    <label for="newUsername">
                                        <i class="mdi mdi-account me-2"></i>new Username
                                    </label>
                                </div>
                            </div>

                            <!-- New Password -->
                            <div class="col-12">
                                <div class="form-floating">
                                    <input type="password"
                                           class="form-control"
                                           id="newPassword"
                                           name="newPassword"
                                           placeholder="New Password"
                                           required>
                                    <label for="newPassword">
                                        <i class="mdi mdi-key me-2"></i>New Password
                                    </label>
                                </div>
                            </div>

                            <!-- Confirm New Password -->
                            <div class="col-12">
                                <div class="form-floating">
                                    <input type="password"
                                           class="form-control"
                                           id="confirmPassword"
                                           name="confirmPassword"
                                           placeholder="Confirm New Password"
                                           required>
                                    <label for="confirmPassword">
                                        <i class="mdi mdi-key-plus me-2"></i>Confirm New Password
                                    </label>
                                </div>
                                <div id="passwordMismatch" class="text-danger mt-2" style="display: none;">
                                    <i class="mdi mdi-alert-circle me-1"></i>Passwords do not match
                                </div>
                            </div>

                            <!-- Password Requirements -->
                            <div class="col-12">
                                <div class="card bg-light border-0">
                                    <div class="card-body p-3">
                                        <h6 class="card-title mb-2">
                                            <i class="mdi mdi-information me-2"></i>Password Requirements:
                                        </h6>
                                        <ul class="list-unstyled mb-0 small text-muted">
                                            <li><i class="mdi mdi-check-circle text-success me-2"></i>At least 6 characters long</li>

                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>

                <!-- Action buttons -->
                <div class="card-footer bg-transparent p-4">
                    <div class="row g-3">
                        <div class="col-12 col-md-6">
                            <button type="submit"
                                    form="changePasswordForm"
                                    class="btn btn-warning w-100 rounded-3 py-2"
                                    id="submitBtn">
                                <i class="mdi mdi-content-save me-2"></i>Update Password
                            </button>
                        </div>
                        <div class="col-12 col-md-6">
                            <a asp-controller="Profile"
                               asp-action="Profile"
                               class="btn btn-outline-secondary w-100 rounded-3 py-2">
                                <i class="mdi mdi-arrow-left me-2"></i>Back to Profile
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient-warning {
        background: linear-gradient(135deg, #d35400 0%, #ff8c00 100%) !important;
    }

    .btn-warning {
        background: linear-gradient(135deg, #d35400 0%, #ff8c00 100%) !important;
        border: none;
        color: white;
        font-weight: 600;
    }

        .btn-warning:hover {
            background: linear-gradient(135deg, #d35400 0%, #c0392b 100%);
            color: white;
            transform: translateY(-1px);
        }

    .card {
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }

        .card:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15) !important;
        }

    .btn {
        transition: all 0.3s ease;
    }

        .btn:hover {
            transform: translateY(-1px);
        }

    .form-floating > .form-control:focus ~ label,
    .form-floating > .form-control:not(:placeholder-shown) ~ label {
        opacity: .65;
        transform: scale(.85) translateY(-0.5rem) translateX(0.15rem);
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Animation cho form
            $('.form-floating').each(function(index) {
                $(this).css('opacity', '0').delay(index * 100).animate({
                    opacity: 1
                }, 500);
            });

            // Kiểm tra mật khẩu xác nhận
            $('#confirmPassword, #newPassword').on('input', function() {
                var newPassword = $('#newPassword').val();
                var confirmPassword = $('#confirmPassword').val();

                if (confirmPassword && newPassword !== confirmPassword) {
                    $('#passwordMismatch').show();
                    $('#submitBtn').prop('disabled', true);
                } else {
                    $('#passwordMismatch').hide();
                    $('#submitBtn').prop('disabled', false);
                }
            });

            // Validation form
            $('#changePasswordForm').on('submit', function(e) {
                var newPassword = $('#newPassword').val();
                var confirmPassword = $('#confirmPassword').val();

                if (newPassword !== confirmPassword) {
                    e.preventDefault();
                    $('#passwordMismatch').show();
                    return false;
                }

                if (newPassword.length < 6) {
                    e.preventDefault();
                    alert('Password must be at least 6 characters long');
                    return false;
                }
            });
        });
    </script>
}
