@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "AdminLayout";
}
@Html.AntiForgeryToken()
@using System.Security.Claims
@{
    var userName = User.Identity!.Name; // Lấy từ ClaimTypes.Name
    var imgPath = User.Claims.FirstOrDefault(c => c.Type == "AvatarUrl")?.Value ?? "/images/default.jpg";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>Purple Admin</title>
    <!-- plugins:css -->
    <link rel="stylesheet"
          href="~/OrgLayout/assets/vendors/mdi/css/materialdesignicons.min.css" />
    <link rel="stylesheet" href="~/OrgLayout/assets/vendors/css/vendor.bundle.base.css" />
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <!-- endinject -->
    <!-- Layout styles -->
     
    <link rel="stylesheet" href="~/OrgLayout/assets/css/style.css" />
    <link rel="stylesheet" href="~/OrgLayout/ManageEvent.css">
    <link href="~/OrgLayout/CreateEvent.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/OrgLayout/Modal.css">
    <!-- End layout styles -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Overpass:ital,wght@0,100..900;1,100..900&display=swap"
          rel="stylesheet" />
    <!-- Nhúng Material Design Icons CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/MaterialDesign-Webfont/7.2.96/css/materialdesignicons.min.css">
    

    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
          integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
          crossorigin="anonymous"
          referrerpolicy="no-referrer" />
    <link href="~/OrgLayout/VolunteerDetails.css" rel="stylesheet" />
    <!-- Include Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link href="~/OrgLayout/EventDetails.css" rel="stylesheet" />
    <link href="~/OrgLayout/EventDetails.css" rel="stylesheet" />
</head>
<body>
    <div class="container-scroller">
        <!-- partial:partials/_navbar.html -->
        <nav class="navbar default-layout-navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
            <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-center">
                <div class="navbar-brand brand-logo">
                    <img src="~/OrgLayout/assets/images/VolunteerIcon.png"
                         alt="Logo"
                         class="navbar-logo" />
                    <a class="navbar-title" >DUTERS</a>
                </div>
            </div>
            <div class="navbar-menu-wrapper d-flex align-items-stretch">
                <button class="navbar-toggler navbar-toggler align-self-center"
                        type="button"
                        data-toggle="minimize">
                    <span class="mdi mdi-menu"></span>
                </button>
                <ul class="navbar-nav navbar-nav-right">
                    <li class="nav-item nav-profile dropdown">
                        <a class="nav-link dropdown-toggle"
                           id="profileDropdown"
                           href="#"
                           data-bs-toggle="dropdown"
                           aria-expanded="false">
                            <div class="nav-profile-img">
                                <img src="@imgPath" alt="image" />
                                <span class="availability-status online"></span>
                            </div>
                            <div class="nav-profile-text">
                                <p class="mb-1 text-black">@userName</p>
                            </div>
                        </a>
                        <div class="dropdown-menu navbar-dropdown"
                             aria-labelledby="profileDropdown">
                            <a class="dropdown-item" asp-controller="Profile" asp-action="Profile">
                                <i class="mdi mdi-cached me-2 text-success"></i> Thông tin
                            </a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" asp-area="Admin" asp-controller="HomeAdmin" asp-action="Logout" >
                                <i class="mdi mdi-logout me-2 text-primary"></i> Đăng xuất
                            </a>
                        </div>
                    </li>
                </ul>
                <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center"
                        type="button"
                        data-toggle="offcanvas">
                    <span class="mdi mdi-menu"></span>
                </button>
            </div>
        </nav>
        <!-- partial -->
        <div class="container-fluid page-body-wrapper">
            <!-- partial:partials/_sidebar.html -->
            <nav class="sidebar sidebar-offcanvas" id="sidebar">
                <ul class="nav">
                    <li class="nav-item nav-profile">
                        <a href="#" class="nav-link">
                            <div class="nav-profile-image">
                                <img src="@imgPath" alt="profile" />
                                <span class="login-status online"></span>
                                <!--change to offline or busy as needed-->
                            </div>
                            <div class="nav-profile-text d-flex flex-column">
                                <span class="font-weight-bold mb-2">@userName</span>
                            </div>
                            <i class="mdi mdi-bookmark-check text-success nav-profile-badge"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-controller="HomeAdmin" asp-action="Index">
                            <span class="menu-title">Thống kê</span>
                            <i class="mdi mdi-view-dashboard menu-icon"></i>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-controller="EventManager" asp-action="Event">
                            <span class="menu-title">Sự kiện</span>
                            <i class="mdi mdi-calendar-multiple menu-icon"></i>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-controller="Volunteers" asp-action="Index">
                            <span class="menu-title">Tình nguyện viên</span>
                            <i class="mdi mdi-account-heart menu-icon"></i>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-controller="OrgManager" asp-action="Index">
                            <span class="menu-title">Tổ chức</span>
                            <i class="mdi mdi-account-group menu-icon"></i>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-controller="Users" asp-action="Index">
                            <span class="menu-title">Người dùng</span>
                            <i class="mdi mdi-account menu-icon"></i>
                        </a>
                    </li>
                </ul>
            </nav>
            <!-- partial -->
            <div class="main-panel w-100">
                <div class="content-wrapper">
                  @RenderBody()
                </div>
                <!-- content-wrapper ends -->
                <!-- partial:partials/_footer.html -->
                <!-- partial -->
            </div>
            <!-- main-panel ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="~/AdminLayout/assets/vendors/js/vendor.bundle.base.js"></script>
    <script src="~/OrgLayout/Search.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <script src="~/AdminLayout/assets/vendors/chart.js/Chart.min.js"></script>
    <script src="~/AdminLayout/assets/js/jquery.cookie.js" type="text/javascript"></script>
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="~/AdminLayout/assets/js/off-canvas.js"></script>
    <script src="~/AdminLayout/assets/js/hoverable-collapse.js"></script>
    <script src="~/AdminLayout/assets/js/misc.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page -->
    <script src="~/AdminLayout/assets/js/dashboard.js"></script>
    <!--<script src="~/AdminLayout/Chart.js"></script>-->
    <script src="~/AdminLayout/assets/js/todolist.js"></script>
    <!-- End custom js for this page -->
    @RenderSection("Scripts", required: false)
</body>
</html>
