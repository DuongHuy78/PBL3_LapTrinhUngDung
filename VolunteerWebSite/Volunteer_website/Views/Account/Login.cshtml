@using Volunteer_website.ViewModels
@model LoginVM
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Đăng nhập";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <title>Đăng nhập</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <link href="https://fonts.googleapis.com/css?family=Dosis:200,300,400,500,700" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Overpass:300,400,400i,600,700" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/Login.css" />
</head>
<body>
    <div class="wrapper">
        <div class="loginContainer">
            <div class="LoginHeader">
                <h1>Đăng nhập</h1>
            </div>
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fa-solid fa-circle-check me-2"></i> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Đóng"></button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fa-solid fa-circle-exclamation me-2"></i> @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Đóng"></button>
                </div>
            }
            <form asp-action="Login" asp-controller="Account" method="post" asp-route-returnurl="@(ViewBag.ReturnUrl ?? string.Empty)">
                <div class="inputBox">
                    <label asp-for="UserName" class="inputLabel"></label>
                    <input type="text" asp-for="UserName" class="inputField" placeholder="Tên đăng nhập" required />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="inputBox">
                    <label asp-for="Password" class="inputLabel"></label>
                    <input type="password" asp-for="Password" class="inputField" placeholder="Mật khẩu" required />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="custom-container justify-content-center">
                    <a asp-action="ForgotPassword" asp-controller="Account" class="forget_password">Quên mật khẩu?</a>
                </div>
                <button type="submit" class="btn-login">Đăng nhập</button>

                <div class="register-link" style="
                display: block;
                margin-top: 10px;
                align-items: center;
                text-align: center;
              ">
                    <a asp-action="Register" asp-controller="Account">Chưa có tài khoản?</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>